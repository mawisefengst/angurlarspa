
<div class="admin_postbox container">
	
	<div class="row">

		<h1 class="col-md-10">All POSTS</h1>

		<a class="col-md-2 btn btn-primary createPostLink" href="/newPost">Create New Post</a>

	</div>		

	<div class="row">
		<table class="table table-striped table-bordered">
		{{# each posts as |val key|}}
		   <tr>
			    <td><h4>{{val.title}}</h4></td>
			    <td><small>{{{val.content}}}</small></td>
			    <td><a class="btn btn-link" href="/post/edit/{{val.cid}}">Edit</a></td>
		   </tr> 
		{{/each}}
		</table>
	</div>
		
</div>	